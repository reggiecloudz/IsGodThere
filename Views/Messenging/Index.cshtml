@model IEnumerable<Chat>
@{
    ViewData["Title"] = "Chats";
}

<partial name="Partials/_NewRoomFormModal" />

<div class="container my-4">
    <div class="row">
        <a class="btn btn-primary btn-block w-100" href="#modal-chat-form" data-bs-toggle="modal" title="Quick preview">
            Add Room
        </a>
    </div>
    <div class="row my-4">
        @if (Model.Count() > 0)
        {
            @foreach (var chat in Model)
            {
                <a class="btn btn-primary mb-3 btn-block" asp-controller="Messenging" asp-action="Chat" asp-route-id="@chat.Id">
                    @chat.Name
                </a>
            }
        }
        else
        {
            <p>No records found</p>
        }
    </div>
</div>
