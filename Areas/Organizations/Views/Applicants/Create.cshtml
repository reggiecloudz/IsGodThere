@model IsGodThere.Domain.Applicant

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 fs-3">Create Applicant</div>
    </div>

    <div class="row">
        <div class="col-md-12 fs-3">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Create
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="IsAccepted" />
                            <label class="form-check-label" asp-for="IsAccepted">
                                Accept Applicant
                            </label>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Qualifications" class="control-label"></label>
                            <input asp-for="Qualifications" class="form-control" />
                            <span asp-validation-for="Qualifications" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UserId" class="control-label"></label>
                            <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="OpportunityId" class="control-label"></label>
                            <select asp-for="OpportunityId" class ="form-control" asp-items="ViewBag.OpportunityId"></select>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
