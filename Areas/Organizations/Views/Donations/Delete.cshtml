@model IsGodThere.Domain.Donation

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 fs-3">Delete donation</div>
    </div>

    <div class="row">
        <div class="col-md-12 fs-3">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Delete
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Message)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Message)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Donor)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Donor!.Identity!.FullName)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Campaign)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Campaign!.Name)
                            </dd>
                        </dl>
                        
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
