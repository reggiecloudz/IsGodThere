@model IsGodThere.Domain.Donation

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 fs-3">Donation details</div>
    </div>

    <div class="row">
        <div class="col-md-12 fs-3">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Details
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Message)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Message)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Donor)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Donor!.Identity!.FullName)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Campaign)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Campaign!.Name)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
