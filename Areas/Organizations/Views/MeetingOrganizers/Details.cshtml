@model IsGodThere.Domain.MeetingOrganizer

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 fs-3">Meeting Organizer Details</div>
    </div>

    <div class="row">
        <div class="col-md-12 fs-3">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Details
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.IsLead)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.IsLead)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Organizer)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Organizer!.Identity!.FullName)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Meeting)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Meeting!.Name)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

